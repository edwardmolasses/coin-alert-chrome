{
  "name": "IOTA Price Ticker & Alert",
  "short_name": "IOTA Price Ticker & Alert",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Show the IOTA ticker price and set an alert so that the browser icon will flash when the alert price is passed.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js",
      "scripts/popup.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://chrome-coin-alert-4.glitch.me/*"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [],
      "css": [
        "styles/content.css",
        "styles/jquery.modal.min.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "omnibox": {
    "keyword": "OMNIBOX-KEYWORD"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/browser-icon-19.png",
      "38": "images/browser-icon-38.png"
    },
    "default_title": "IOTA Price Ticker & Alert",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png",
    "images/*.png"
  ]
}
